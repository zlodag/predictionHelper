{
  "name": "PredictionBook helper",
  "description": "Managing encryption and decryption of PredictionBook entries",
  "version": "0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://predictionbook.com/groups/*", "*://predictionbook.com/users/*"],
      "js": ["decryptListContentScript.js"],
      "css": ["decryptListStyle.css"]
    }
  ],
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "host_permissions": [
    "*://predictionbook.com/predictions/new"
  ],
  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],
  "options_page": "options.html"
}